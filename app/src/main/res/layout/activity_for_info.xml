<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_for_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   android:background="#6acffa"
    tools:context="com.example.mirza.coffeeshop.ForInfo">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" CLick On Item To Continue"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_above="@+id/lsititm"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="13dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/lsititm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="Confirm your Table No and Name"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView8" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/natxt"
        android:hint="Name"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="Done"
        android:textColor="#f0f8ff"
        android:background="#390644"
        android:layout_marginStart="82dp"
        android:id="@+id/btnin"
        android:textStyle="bold"
        android:layout_below="@+id/tbtxt"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbtxt"
        android:hint="Table No:"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/natxt"
        android:layout_alignParentStart="true" />

</RelativeLayout>
