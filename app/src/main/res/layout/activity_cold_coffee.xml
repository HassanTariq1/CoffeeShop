<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cold_coffee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" android:background="#ff4040"
    tools:context="com.example.mirza.coffeeshop.ColdCoffee">


    <ImageView
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:id="@+id/imgv"
        android:src="@drawable/vream"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Price:
  $10"
        android:textSize="30sp"
        android:textColor="#000"
        android:textStyle="italic"
        android:layout_marginTop="23dp"
        android:id="@+id/txtprit"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp" />

    <TextView
        android:text="Cold Coffee"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/Desc"
        android:textStyle="italic"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:text="Strong coffee and milk into a blender. Add 2 scoops of ice cream and the ice cubes, then blitz until it is the consistency of a smoothie. Pour straight into a tall glass."
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="italic"
        android:id="@+id/textView2"
        android:layout_below="@+id/Desc"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/corde"
        android:text="Order"
        android:textSize="20sp"
        android:textStyle="italic"

        android:layout_alignBottom="@+id/imgv"
        android:layout_alignEnd="@+id/txtprit" />

</RelativeLayout>
